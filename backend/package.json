{
  "name": "histovec-backend",
  "version": "1.0.0",
  "description": "Jouez la transparence en partageant l'historique du véhicule",
  "main": "index.js",
  "scripts": {
    "build": "NODE_OPTIONS=--openssl-legacy-provider babel src -d dist",
    "dev-setup": "node dev-setup/index.js",
    "dev": "nodemon --inspect --watch src boot-dev.js",
    "format": "eslint src --fix",
    "prelint": "npm run format",
    "lint": "eslint src",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:only": "cross-env NODE_ENV=test jest",
    "pretest": "npm run lint",
    "test:all": "run-s test",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests --detectOpenHandles --forceExit"
  },
  "keywords": [
    "vehicule",
    "occasion",
    "certificat",
    "immatriculation"
  ],
  "author": "Ministère de l'intérieur",
  "license": "GPLv3",
  "dependencies": {
    "@hapi/hapi": "^20.2.1",
    "@hapi/inert": "^6.0.5",
    "@hapi/vision": "^6.1.0",
    "axios": "^0.25.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.7",
    "elasticsearch": "^16.7.2",
    "hapi-swagger": "^14.2.4",
    "ioredis": "^4.28.5",
    "joi": "^17.6.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "babel-jest": "^27.5.1",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "html-loader": "^3.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "regenerator-runtime": "^0.13.9",
    "supertest": "^6.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:all"
    }
  },
  "lint-staged": {
    "linters": {
      "../**/*.{js,vue,htm,html,css,scss}": [
        "npm run lint",
        "git add"
      ]
    }
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "plugin:import/errors",
      "plugin:import/warnings",
      "standard"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "import/no-unresolved": [
        2,
        {
          "commonjs": true,
          "amd": true
        }
      ],
      "import/named": 2,
      "import/namespace": 2,
      "import/default": 2,
      "import/export": 2,
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    }
  }
}